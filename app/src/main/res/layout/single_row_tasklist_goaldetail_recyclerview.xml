<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_margin="2dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@drawable/four_corner_round_red_10"
        android:id="@+id/view_backgroundground"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="0dp">
        <LinearLayout
            android:layout_margin="0dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView

                    android:layout_marginTop="9dp"
                    android:layout_marginBottom="9dp"
                    android:gravity="right|center_vertical"
                    android:text="Delete"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <ImageView
                android:layout_margin="5dp"
                android:src="@drawable/bin"
                android:layout_weight=".19"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:layout_margin="5dp"
        android:background="@drawable/four_corner_round_white_10"
        android:visibility="visible"
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="0dp">

            <LinearLayout
                android:layout_marginRight="2dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_title"
                    android:layout_marginTop="1dp"
                    android:gravity="left|center_vertical"
                    android:text="Task"
                    android:textSize="18dp"
                    android:textColor="@color/dark_ground"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:weightSum="2"
                    android:layout_marginLeft="5dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_gravity="right"
                        android:layout_weight="1.3"
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">


                        <TextView
                            android:layout_marginLeft="3dp"
                            android:gravity="center_vertical"
                            android:text="every 5th of month"
                            android:textSize="10dp"
                            android:id="@+id/txt_frequeny"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent" />

                        <TextView
                            android:gravity="center_vertical"
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="0dp"
                            android:text="InActive"
                            android:textSize="12dp"
                            android:id="@+id/txt_status"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content"/>
                        <TextView
                            android:layout_marginLeft="8dp"
                            android:gravity="center_vertical"
                            android:text="every 5th of month"
                            android:textSize="12dp"
                            android:textStyle="bold"

                            android:id="@+id/txt_current_status"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight=".7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="right"
                            android:text="start:02/02/2020 "
                            android:textSize="12dp"
                            android:id="@+id/txt_deadline"
                            android:layout_width="match_parent"
                            android:maxLines="2"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content" />


                        <TextView
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:gravity="right"
                            android:text="end :02/02/2020  "
                            android:textSize="12dp"
                            android:id="@+id/txt_deadline2"
                            android:layout_width="match_parent"
                            android:maxLines="2"
                            android:layout_weight=".7"
                            android:layout_height="wrap_content" />


                    </LinearLayout>
                        </LinearLayout>

            </LinearLayout>





    </RelativeLayout>

</FrameLayout>
