<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/four_corner_round_white_10"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/lnr_top_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="3dp"
                android:id="@+id/txt_goalname"
                android:textStyle="bold"
                android:textColor="@color/dark_ground"
                android:gravity="left"
                android:textSize="15dp"
                android:text="Title"
                android:maxLines="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/txt_goal_status"
                    android:textStyle="bold"
                    android:textColor="@color/dark_ground"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textStyle="bold"
                    android:text=","
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_margin="3dp"
                    android:id="@+id/txt_goaldeadline"
                    android:textStyle="bold"
                    android:textColor="@color/dark_ground"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:text="Deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>