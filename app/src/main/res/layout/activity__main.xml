                    <LinearLayout
                        android:id="@+id/lnr_top_goals_container"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/txt_dashboard"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="18dp"
                            android:text="Dashboard"
                            android:textColor="@color/dark_ground"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:text="Goals"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/txt_my_goals"
                                android:layout_marginLeft="10dp"
                                android:textSize="18dp"
                                android:text="My Goals"
                                android:textColor="@color/dark_ground"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/txt_top_3_goals"
                                android:layout_marginLeft="10dp"
                                android:textSize="18dp"
                                android:text="Top  3 Goals "
                                android:textColor="@color/dark_ground"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                            <TextView
                                android:id="@+id/txt_top_10_goals"
                                android:layout_marginLeft="10dp"
                                android:textSize="18dp"
                                android:text="Top  10 Goals "
                                android:textColor="@color/dark_ground"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lnr_all_goals_category_container"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Goal Category"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />
                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:layout_marginLeft="15dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/txt_relationship"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Relationship"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/txt_lifestyle"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Lifestyle"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/txt_spiritual"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Spiritual"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/txt_family"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Family"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:id="@+id/txt_mental"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Mental"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />
                                <TextView
                                    android:id="@+id/txt_physical"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Physical"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:id="@+id/txt_financial"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Financial"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:id="@+id/txt_business"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Business"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:id="@+id/txt_office"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="Office "
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                                <TextView
                                    android:id="@+id/txt_general"
                                    android:layout_marginLeft="10dp"
                                    android:textSize="18dp"
                                    android:text="General"
                                    android:textColor="@color/dark_ground"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />


                            </LinearLayout>

                        </ScrollView>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/lnr_force_report"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Force Report"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="1dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txt_report"
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Report"
                            android:textColor="@color/white"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>


                </LinearLayout>
            </ScrollView>
            <LinearLayout

                android:layout_alignParentBottom="true"
                android:id="@+id/lnr_logout"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
                <TextView
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical|right"
                    android:textSize="25dp"
                    android:text="Logout"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/dark_ground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </RelativeLayout>





    </android.support.design.widget.NavigationView>




</android.support.v4.widget.DrawerLayout>

